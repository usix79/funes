@using Funes.Explorer.Pages
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@(ViewData["Title"] ?? "Funes Explorer")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<div class="d-flex flex-column vh-100 min-vh-100">
  <div class="row justify-content-center flex-grow-1">
    <div class="col-2 text-white bg-dark">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <a asp-page="/Index" class="nav-link text-white">Funes Explorer</a>
        </li>
        <hr style="height:2px; width:90%; border-width:0; color:grey; background-color:grey"/>
        <li class="nav-item">
          <a href="/Increments" class="nav-link text-white @(Model is IncrementsModel ? "active" : "")">Increments</a>
        </li>
        <li>
          <a href="#" class="nav-link text-white">Domain</a>
        </li>
        <li>
          <a href="#" class="nav-link text-white">Indexes</a>
        </li>
        <li>
          <a href="#" class="nav-link text-white">Sets</a>
        </li>
      </ul>
      <div class="dropdown"></div>
    </div>
    <div class="col-10">
      <main role="main" class="pb-3">
        <div class="text-center">
          <div class="row justify-content-center w-75">
            @RenderBody()
          </div>
        </div>
      </main>
    </div>
  </div>  
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>